
@{
    ViewData["Title"] = "Home Page";
}
@model LessonServer.GetAllReply


<div class="text-center">
    <h1 class="display-4">Lessons</h1>
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
        Add Lesson
    </button>
    <table class="table">
        <thead>
            <tr>

                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Credit</th>
                <th scope="col">Operation</th>

            </tr>
        </thead>
        <tbody id="tableBody">
            @foreach (var item in Model.Lessons)
            {
            <tr id="@item.Id">
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td>@item.Credit</td>
                <th scope="col"><button onclick="Delete('@item.Id')"><span class="glyphicon glyphicon-remove"></span>Remove</button></th>
            </tr>
            }

        </tbody>
    </table>

</div>

<div class="modal" id="exampleModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Lesson</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div>
                    <label>Lesson Name</label>
                    <input type="text" placeholder="Name" id="Name" name="Name" />
                </div>
                <div>
                    <label>Lesson Credit</label>
                    <input type="number" placeholder="Credit" id="Credit" name="Credit" />
                </div>

            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary" onclick="Create()">Add</button>

            </div>

        </div>
    </div>
</div>